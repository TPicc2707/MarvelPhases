@model IEnumerable<MarvelPhases.Models.Series>

@{
    ViewBag.Title = "Index";
}
@*Back button*@
<div style="margin: 30px 5px;">
    <a class="backbutton" href="@Url.Action("Home","Series")">Go Back</a>
    <a class="backbutton" href="@Url.Action("Create","Series")">New Series</a>
    @using (Html.BeginForm())
    {
        @*Search Box*@
        <p style="text-align: right;">
            Find by name: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </p>
    }
</div>
<table id="list" align="center">
    <tr>
        <td colspan="7" id="header"><h1>All Series</h1></td>  @*Header*@
    </tr>
    <tr>
        <th>
            @Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.SortTitle })   @*Sort Link*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SeriesNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phase.Id)
        </th>
        <th>
            @Html.ActionLink("Rating", "Index", new { sortOrder = ViewBag.SortRating })   @*Sort Link*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TvService)
        </th>
        <th></th>
    </tr>

    @*Data for Series*@
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeriesNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phase.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TvService)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
