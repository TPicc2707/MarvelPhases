@model IEnumerable<MarvelPhases.Models.Phase>

@{
    ViewBag.Title = "Index";
}

<div style="margin: 30px;">
    <a class="backbutton" href="@Url.Action("Home","Phase")">Go Back</a>
</div>
<table id="list" align="center">
    <tr>
        <td colspan="6" id="header"><h1>All Phases</h1></td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PhaseName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
