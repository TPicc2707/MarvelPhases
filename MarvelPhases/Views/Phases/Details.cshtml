@model MarvelPhases.Models.Phase

@{
    ViewBag.Title = "Detail";
}

<style>
    th {
        padding: 5px;
        text-align: left;   @*Styling table*@
        width: 30%;
    }

    td {
        padding: 5px;
        text-align: left;
    }
</style>

<div>
    @*Table*@
    <table id="list" style="margin: 30px; width: 100%">
        <tr>
            <th colspan="2">
                <h1 style="text-align: center">Phase</h1>  @*Table Header*@
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhaseName)   @*Row Header*@
            </th>
            <td>
                @Html.DisplayFor(model => model.PhaseName)  @*Row Data*@
            </td>
        </tr>

    </table>
    <div style="margin: 30px;">
        <a class="backbutton" href="@Url.Action("Index","Phases")">Go Back</a>  @*Back Button*@
    </div>
</div>
