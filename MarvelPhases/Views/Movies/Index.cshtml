@model IEnumerable<MarvelPhases.Models.Movie>

@{
    ViewBag.Title = "Index";
}
<div style="margin: 30px 5px;">
    <a class="backbutton" href="@Url.Action("Home","Movies")">Go Back</a>
    <a class="backbutton" href="@Url.Action("Create","Movies")">New Movie</a>
</div>
<table id="list" align="center">
    <tr>
        <td colspan="6" id="header"><h1>All Movies</h1></td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CollectionNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phase.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CollectionNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phase.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

